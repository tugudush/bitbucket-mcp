{
  "name": "@tugudush/bitbucket-mcp",
  "version": "3.3.0",
  "description": "A Model Context Protocol server for Bitbucket with read-only operations",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "bitbucket-mcp": "build/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "prepare": "husky",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "lf": "npm run lint && npm run format",
    "ltf": "npm run lint && npm run format && npm run typecheck",
    "ltfb": "npm run lint && npm run typecheck && npm run format && npm run build",
    "vi:major": "node scripts/version-increment.js major",
    "vi:minor": "node scripts/version-increment.js minor",
    "vi:patch": "node scripts/version-increment.js patch"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "bitbucket",
    "api",
    "ai",
    "llm"
  ],
  "author": "tugudush",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tugudush/bitbucket-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/tugudush/bitbucket-mcp/issues"
  },
  "homepage": "https://github.com/tugudush/bitbucket-mcp#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/tugudush"
    },
    {
      "type": "custom",
      "url": "https://github.com/tugudush/bitbucket-mcp#crypto-donations"
    }
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  },
  "files": [
    "build/**/*",
    "!build/__tests__",
    "CHANGELOG.md",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
